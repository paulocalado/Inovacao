<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_cadastro" tools:context=".Cadastro">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editLoginCadastro"
        android:layout_marginTop="102dp"
        android:hint="Login"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bem Vindo"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editSenhaCadastro"
        android:layout_below="@+id/editLoginCadastro"
        android:layout_alignLeft="@+id/editLoginCadastro"
        android:layout_alignStart="@+id/editLoginCadastro"
        android:layout_alignRight="@+id/editLoginCadastro"
        android:layout_alignEnd="@+id/editLoginCadastro"
        android:hint="Senha"/>

    <RadioGroup android:id="@+id/radioGroupCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btEntrarCadastro"
        android:layout_alignLeft="@+id/btEntrarCadastro"
        android:layout_alignStart="@+id/btEntrarCadastro">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sou Diarista"
            android:id="@+id/radioButtonDiaristaCadastro"
             />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sou Contratante"
            android:id="@+id/radioButtonContratanteCadastro"
            />

    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/btEntrarCadastro"
        android:layout_below="@+id/editSenhaCadastro"
        android:layout_alignLeft="@+id/editSenhaCadastro"
        android:layout_alignStart="@+id/editSenhaCadastro" />





</RelativeLayout>
