<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#7d144d">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageDiarista" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textNomeJogador"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome"
        android:id="@+id/textViewPosicao"
        android:layout_below="@+id/textNomeJogador"
        android:layout_toRightOf="@+id/imageDiarista"
        android:layout_toEndOf="@+id/imageDiarista"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Idade"
        android:id="@+id/textViewNumero"
        android:layout_below="@+id/textViewPosicao"
        android:layout_toRightOf="@+id/imageDiarista"
        android:layout_toEndOf="@+id/imageDiarista"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtIdade"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textViewNumero"
        android:layout_alignLeft="@+id/txtNome"
        android:layout_alignStart="@+id/txtNome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtNome"
        android:textColor="#ffffff"
        android:layout_below="@+id/textNomeJogador"
        android:layout_toRightOf="@+id/textViewPosicao"
        android:layout_toEndOf="@+id/textViewPosicao" />

</RelativeLayout>